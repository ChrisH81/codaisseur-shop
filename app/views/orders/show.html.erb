<section style="background-color: white; padding: 5px 10px 30px">
  <h1>Your Cart</h1>

  <div class="row">
    <h3>
      <div class="col-md-6">Product Name</div>
      <div class="col-md-2">Unit Price</div>
      <div class="col-md-1">Quantity</div>
      <div class="col-md-2 text-right">Total Price</div>
    </h3>
  </div>
  <hr>
  <% @order.order_items.each do |order_item| %>
    <div class="row">
      <div class="col-md-6">
        <h4><%= order_item.product.name %></h4>
      </div>
      <div class="col-md-2 text-center"><%= order_item.unit_price %></div>
      <div class="col-md-1 text-right"><%= order_item.quantity %></div>
      <div class="col-md-2 text-right "><%= order_item.total_price %></div>
    </div>
  <% end %>
  <hr>
  <div class="row">
    <h3>
      <div class="col-md-6"></div>
      <div class="col-md-2">Subtotal</div>
      <div class="col-md-1"></div>
      <div class="col-md-2 text-right"><%= @order.subtotal %></div>
    </h3>
  </div>
  <div class="row">
    <h3>
      <div class="col-md-6"></div>
      <div class="col-md-2">Shipping</div>
      <div class="col-md-1"></div>
      <div class="col-md-2 text-right"><%= @order.shipping %></div>
    </h3>
  </div>
  <hr>
  <div class="row">
    <h3>
      <div class="col-md-6"></div>
      <div class="col-md-2">Total Price</div>
      <div class="col-md-1"></div>
      <div class="col-md-2 text-right"><%= @order.total %></div>
    </h3>
  </div>
</section>
